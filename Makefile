CAMLP4LIB=`camlp4 -where`
COQSRC=-I $(COQTOP)/kernel -I $(COQTOP)/lib \
  -I $(COQTOP)/library -I $(COQTOP)/parsing \
  -I $(COQTOP)/pretyping -I $(COQTOP)/interp \
  -I $(COQTOP)/proofs -I $(COQTOP)/syntax -I $(COQTOP)/tactics \
  -I $(COQTOP)/toplevel -I $(COQTOP)/contrib/correctness \
  -I $(COQTOP)/contrib/extraction -I $(COQTOP)/contrib/field \
  -I $(COQTOP)/contrib/fourier -I $(COQTOP)/contrib/graphs \
  -I $(COQTOP)/contrib/interface -I $(COQTOP)/contrib/jprover \
  -I $(COQTOP)/contrib/omega -I $(COQTOP)/contrib/romega \
  -I $(COQTOP)/contrib/ring -I $(COQTOP)/contrib/xml \
  -I $(CAMLP4LIB)
ZFLAGS=$(OCAMLLIBS) $(COQSRC)
OPT=
COQFLAGS=-q $(OPT) $(COQLIBS) $(OTHERFLAGS) $(COQ_XML)
COQC=$(COQBIN)coqc
GALLINA=gallina
COQDOC=$(COQBIN)coqdoc
CAMLC=ocamlc -c
CAMLOPTC=ocamlopt -c
CAMLLINK=ocamlc
CAMLOPTLINK=ocamlopt
COQDEP=$(COQBIN)coqdep -c
GRAMMARS=grammar.cma
CAMLP4EXTEND=pa_extend.cmo pa_ifdef.cmo q_MLast.cmo
PP=-pp "camlp4o -I . -I $(COQTOP)/parsing $(CAMLP4EXTEND) $(GRAMMARS) -impl"

#########################
#                       #
# Libraries definition. #
#                       #
#########################

OCAMLLIBS=-I .
COQLIBS=-I .

###################################
#                                 #
# Definition of the "all" target. #
#                                 #
###################################

VFILES=
VOFILES=$(VFILES:.v=.vo)
VIFILES=$(VFILES:.v=.vi)
GFILES=$(VFILES:.v=.g)
HTMLFILES=$(VFILES:.v=.html)
GHTMLFILES=$(VFILES:.v=.g.html)

all: Lib\
  Kernel\
  Meta\
  Tacs

###################
#                 #
# Subdirectories. #
#                 #
###################

Lib:
	cd Lib ; $(MAKE) all

Kernel:
	cd Kernel ; $(MAKE) all

Meta:
	cd Meta ; $(MAKE) all

Tacs:
	cd Tacs ; $(MAKE) all

####################
#                  #
# Special targets. #
#                  #
####################

.PHONY: all opt byte archclean clean install depend html Lib Kernel Meta Tacs

byte:
	$(MAKE) all "OPT="

opt:
	$(MAKE) all "OPT=-opt"

.depend depend:
	(cd Lib ; $(MAKE) depend)
	(cd Kernel ; $(MAKE) depend)
	(cd Meta ; $(MAKE) depend)
	(cd Tacs ; $(MAKE) depend)

install:
	mkdir -p `$(COQC) -where`/user-contrib
	(cd Lib ; $(MAKE) install)
	(cd Kernel ; $(MAKE) install)
	(cd Meta ; $(MAKE) install)
	(cd Tacs ; $(MAKE) install)

Makefile: Make
	mv -f Makefile Makefile.bak
	$(COQBIN)coq_makefile -f Make -o Makefile

	(cd Lib ; $(MAKE) Makefile)
	(cd Kernel ; $(MAKE) Makefile)
	(cd Meta ; $(MAKE) Makefile)
	(cd Tacs ; $(MAKE) Makefile)

clean:
	rm -f *.cmo *.cmi *.cmx *.o $(VOFILES) $(VIFILES) $(GFILES) *~
	rm -f all.ps all-gal.ps $(HTMLFILES) $(GHTMLFILES)
	(cd Lib ; $(MAKE) clean)
	(cd Kernel ; $(MAKE) clean)
	(cd Meta ; $(MAKE) clean)
	(cd Tacs ; $(MAKE) clean)

archclean:
	rm -f *.cmx *.o
	(cd Lib ; $(MAKE) archclean)
	(cd Kernel ; $(MAKE) archclean)
	(cd Meta ; $(MAKE) archclean)
	(cd Tacs ; $(MAKE) archclean)

html:
	(cd Lib ; $(MAKE) html)
	(cd Kernel ; $(MAKE) html)
	(cd Meta ; $(MAKE) html)
	(cd Tacs ; $(MAKE) html)

